#!/bin/bash
# Script: batchProcessing-0x04
# Objective: Parallel Pokémon fetching with process management

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data_parallel"
ERROR_LOG="errors.txt"

mkdir -p "$OUTPUT_DIR"
> "$ERROR_LOG"

fetch_pokemon() {
    local pokemon=$1
    echo "Fetching data for $pokemon..."
    if curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$OUTPUT_DIR/${pokemon}.json"; then
        echo "Saved data to $OUTPUT_DIR/${pokemon}.json ✅"
    else
        echo "Failed to fetch data for $pokemon ❌" >> "$ERROR_LOG"
    fi
}

# Start all processes in background and store their PIDs
for pokemon in "${POKEMON_LIST[@]}"; do
    fetch_pokemon "$pokemon" &
    PIDS+=($!)  # store PID
done

# Show background jobs
echo "Current background jobs:"
jobs

# Example: kill a job if needed (just demonstration)
# kill "${PIDS[0]}"

# Wait for all jobs to finish
wait

echo "All Pokémon data fetched."

