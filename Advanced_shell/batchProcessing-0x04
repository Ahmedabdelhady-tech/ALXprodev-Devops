#!/bin/bash
# Script: batchProcessing-0x04
# Objective: Fetch Pokémon data in parallel with process management

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data_parallel"
ERROR_LOG="errors.txt"

mkdir -p "$OUTPUT_DIR"
> "$ERROR_LOG"

pids=() # Array to store process IDs

fetch_pokemon() {
    local pokemon=$1
    echo "Fetching data for $pokemon..."
    if curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$OUTPUT_DIR/${pokemon}.json"; then
        echo "Saved data to $OUTPUT_DIR/${pokemon}.json ✅"
    else
        echo "Failed to fetch data for $pokemon ❌" >> "$ERROR_LOG"
    fi
}

# Start fetching in background and save PIDs
for pokemon in "${POKEMON_LIST[@]}"; do
    fetch_pokemon "$pokemon" &
    pids+=($!) # Save PID of background process
done

# Wait for all processes and handle any that hang
for pid in "${pids[@]}"; do
    if ! wait "$pid"; then
        echo "Process $pid failed or hung, killing..."
        kill "$pid" 2>/dev/null
    fi
done

echo "All Pokémon data fetched."

