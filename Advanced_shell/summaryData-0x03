#!/bin/bash
# Script: summaryData-0x03
# Objective: Summarize PokÃ©mon data into a CSV report with averages

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Check if input directory exists
if [ ! -d "$INPUT_DIR" ]; then
    echo "Error: Directory $INPUT_DIR does not exist."
    exit 1
fi

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Loop through JSON files and extract data
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/') # Capitalize first letter
    height=$(jq '.height' "$file")
    weight=$(jq '.weight' "$file")

    # Convert from decimeters to meters & hectograms to kilograms
    height_m=$(awk "BEGIN {printf \"%.1f\", $height / 10}")
    weight_kg=$(awk "BEGIN {printf \"%.1f\", $weight / 10}")

    echo "$name,$height_m,$weight_kg" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: $OUTPUT_FILE"
echo ""

# Display report content
cat "$OUTPUT_FILE"
echo ""

# Calculate averages
awk -F',' 'NR>1 {height+=$2; weight+=$3; count++}
    END {
        if (count > 0) {
            printf "Average Height: %.2f m\n", height/count
            printf "Average Weight: %.2f kg\n", weight/count
        }
    }' "$OUTPUT_FILE"

