#!/bin/bash
# Script: data_extraction_automation-0x01
# Objective: Extract Pikachu's name, height, weight, and type from data.json in human-readable format

JSON_FILE="data.json"

# Extract fields using jq
name=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')
height_dm=$(jq -r '.height' "$JSON_FILE")
weight_hg=$(jq -r '.weight' "$JSON_FILE")
type=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')

# Convert units
formatted_height=$(echo "$height_dm" | awk '{printf "%.1f", $1/10}')
formatted_weight=$(echo "$weight_hg" | awk '{printf "%.1f", $1/10}')

# Print output exactly as required
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."

