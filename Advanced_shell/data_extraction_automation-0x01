#!/bin/bash
# Script: data_extraction_automation-0x01
# Objective: Extract Pikachu's name, height, weight, and type from data.json

JSON_FILE="data.json"

# Extract fields using jq
NAME=$(jq -r '.name' "$JSON_FILE" | sed 's/.*/\u&/')  # Capitalize first letter
HEIGHT_DM=$(jq -r '.height' "$JSON_FILE")
WEIGHT_HG=$(jq -r '.weight' "$JSON_FILE")
TYPE=$(jq -r '.types[0].type.name' "$JSON_FILE" | sed 's/.*/\u&/')

# Convert units (dm → m, hg → kg) using awk
HEIGHT_M=$(echo "$HEIGHT_DM" | awk '{printf "%.1f", $1/10}')
WEIGHT_KG=$(echo "$WEIGHT_HG" | awk '{printf "%.1f", $1/10}')

# Final output
echo "$NAME is of type $TYPE, weighs ${WEIGHT_KG}kg, and is ${HEIGHT_M}m tall."

