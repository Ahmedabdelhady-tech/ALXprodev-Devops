#!/bin/bash
# Script: apiAutomation-0x00
# Objective: Get Pikachu data from Pokémon API and save to data.json
# If request fails, log error to errors.txt

URL="https://pokeapi.co/api/v2/pokemon/pikachu"
OUTPUT_FILE="data.json"
ERROR_FILE="errors.txt"

# Make the request using curl
# -s = silent mode
# -o = output to file
# -w "%{http_code}" = get HTTP status code
HTTP_STATUS=$(curl -s -o "$OUTPUT_FILE" -w "%{http_code}" "$URL")

# Check if status code is 200 (success)
if [ "$HTTP_STATUS" -ne 200 ]; then
    echo "❌ Request failed with status $HTTP_STATUS at $(date)" >> "$ERROR_FILE"
    rm -f "$OUTPUT_FILE"
    exit 1
else
    echo "✅ Data saved to $OUTPUT_FILE"
fi

